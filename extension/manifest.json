{
  "manifest_version": 3,
  "name": "Resume Tailor",
  "version": "1.0.0",
  "description": "AI-powered resume tailoring - Automatically tailor your resume to match job descriptions",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Resume Tailor"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/jobs/*",
        "*://*.indeed.com/*",
        "*://*.glassdoor.com/job-listing/*",
        "*://*.ziprecruiter.com/jobs/*",
        "*://*.monster.com/job-openings/*",
        "*://*.dice.com/job-detail/*",
        "*://*.lever.co/*",
        "*://*.greenhouse.io/*",
        "*://*.workday.com/*",
        "*://*.myworkdayjobs.com/*",
        "*://*.smartrecruiters.com/*",
        "*://*.jobs.lever.co/*",
        "*://*.boards.greenhouse.io/*",
        "*://*/*careers*",
        "*://*/*jobs*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.html",
        "*.css",
        "*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}