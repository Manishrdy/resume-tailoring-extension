# =====================================================
# Resume Tailor - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# All resume/file paths are configured here ONLY
# =====================================================

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Google Gemini API Key
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Resume filename (REQUIRED)
# Must exist in the resume directory
# Supported formats: .pdf, .docx
# Example: my_resume.pdf, john_doe_resume.docx
RESUME_FILENAME=my_resume.pdf

# ===========================================
# OPTIONAL - Resume Configuration
# ===========================================

# Resume directory name (default: resume)
# Relative to project root
RESUME_DIR_NAME=resume

# ===========================================
# OPTIONAL - Gemini Configuration
# ===========================================

# Gemini model (default: gemini-1.5-flash)
# Options: gemini-1.5-flash, gemini-1.5-pro, gemini-2.0-flash
GEMINI_MODEL=gemini-1.5-flash

# ===========================================
# OPTIONAL - Server Configuration
# ===========================================

# Server host (default: 127.0.0.1)
HOST=127.0.0.1

# Server port (default: 5000)
PORT=5000

# Debug mode (default: false)
# Enables auto-reload and verbose errors
DEBUG=false

# ===========================================
# OPTIONAL - Logging Configuration
# ===========================================

# Log level (default: INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable JSON formatted logs (default: false)
# Recommended for production environments
LOG_JSON=false
